#include <stdio.h>
#include <stdlib.h>
//WAP to calculate simple interest for 3 sets of principle, number of years and rate of interest.
int main()
{
    float p, n, r, simple_interest;
    int count;
    for(count=1; count<=3; count++)
    {
        printf("Enter principle:");
        scanf("%f", &p);
        printf("Enter number of years:");
        scanf("%f", &n);
        printf("Enter rate of interest:");
        scanf("%f", &r);
        simple_interest=p*n*r/100;
        printf("The simple interest is:%.2f\n", simple_interest);
    }
}
